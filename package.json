  "license": "MIT",
  "main": "dist/src/server/main.js",
  "scripts": {
    "prebuild": "rimraf dist src/client/global/.next rimraf src/client/panel/.next",
    "build": "nest build && cd src/client/global && next build && cd ../panel && next build && cd ../../..",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\"",
    "start": "npm run build && node .",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
